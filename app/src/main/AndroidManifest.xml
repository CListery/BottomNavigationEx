<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yh.bottomnavigationex.demo">

    <application
        android:name=".common.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavigationEx">
        <activity
            android:name=".features.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.style.StyleActivity" />
        <activity
            android:name=".features.viewpager.WithViewPagerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".features.viewpager.WithViewPager2Act"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".features.setupwithviewpager.SetupWithViewPagerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".features.badgeview.BadgeViewActivity" />
        <activity android:name=".features.centerfab.CenterFabActivity" />
    </application>

</manifest>