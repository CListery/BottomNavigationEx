<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".features.style.StyleActivity">

            <TextView
                style="@style/text_black"
                android:text="@string/normal" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_normal"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_shifting_mode" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_shifting_mode"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_item_shifting_mode" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_item_shifting_mode"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_text" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_text"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_icon" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_icon"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation_shifting_mode" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation_shifting_mode"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation_item_shifting_mode" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation_item_shifting_mode"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation_shifting_mode_item_shifting_mode" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation_shifting_mode_item_shifting_mode"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_shifting_mode_item_shift_mode_text" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_shifting_mode_item_shifting_mode_text"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation_shifting_mode_item_shifting_mode_text" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation_shifting_mode_item_shifting_mode_text"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_shifting_mode_item_shifting_mode_icon" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_shifting_mode_item_shifting_mode_and_icon"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_item_shifting_mode_icon" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_item_shifting_mode_icon"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/no_animation_shifting_mode_item_shifting_mode_icon" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_no_animation_shifting_mode_item_shifting_mode_icon"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/with_padding" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_with_padding"
                style="@style/bnve_primary_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/center_icon_only" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_center_icon_only"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation_center_icon_only" />

            <TextView
                style="@style/text_black"
                android:text="@string/smaller_text" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_smaller_text"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/bigger_icon" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_bigger_icon"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/custom_typeface" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_custom_typeface"
                style="@style/bnve_primary_bg"
                app:itemIconTint="@color/selector_item_gray_color"
                app:itemTextColor="@color/selector_item_gray_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/icon_selector" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_icon_selector"
                style="@style/bnve_white_bg"
                app:itemTextColor="@color/selector_item_primary_color"
                app:menu="@menu/menu_navigation_selector" />

            <TextView
                style="@style/text_black"
                android:text="@string/icon_margin_top" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_icon_margin_top"
                style="@style/bnve_white_bg"
                app:itemIconTint="@color/selector_item_primary_color"
                app:itemTextColor="@color/selector_item_primary_color"
                app:menu="@menu/menu_navigation" />

            <TextView
                style="@style/text_black"
                android:text="@string/unchecked_first_time" />

            <com.yh.bottomnavigationex.BottomNavigationViewEx
                android:id="@+id/bnve_unchecked_first_time"
                style="@style/bnve_white_bg"
                app:itemIconTint="@color/selector_item_primary_color"
                app:itemTextColor="@color/selector_item_primary_color"
                app:menu="@menu/menu_navigation" />

        </LinearLayout>

    </ScrollView>

</layout>